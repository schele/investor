@using Investor.Helpers
@using Investor.Models.PageModels

@inherits UmbracoViewPage<CoWorkerPageModel>

@{
    Layout = "Master.cshtml";
}

<div class="row">
    @Html.Partial("~/Views/Partials/SubNavigation.cshtml")
    <article class="co-worker-page col-md-7 col-sm-12">
        <div class="row">
            <div class="col-md-3 col-sm-3">
                @if (Model.Image != null)
                {
                    <img src="@Model.Image.Url" alt="@Model.Name" />
                }
            </div>
            <div class="co-worker-page-content col-md-5 col-sm-5">
                @Html.Render(Model.Name, @<h1>@Model.Name</h1>)
                @Html.Render(Model.Position, @<span class="co-worker-page-position">Position: @Model.Position</span>)
                @Html.Render(Model.Phone, @<span>@Umbraco.GetDictionaryValue("System.Contact.Phone"): @Model.Phone</span>)
                @Html.Render(Model.Mobile, @<span>@Umbraco.GetDictionaryValue("System.Contact.Mobile"): @Model.Mobile</span>)
                @Html.Raw(Model.AdditionalInfo)
                @Html.Raw(Model.Resume)
            </div>
        </div>
    </article>
</div>