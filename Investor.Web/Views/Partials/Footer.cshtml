@using Investor.Models.PageModels

@inherits UmbracoViewPage<BaseModel>

@helper AboutInvestorPage()
{
    var aboutInvestorNode = Model.StartPage.AboutInvestorNode;

    if (aboutInvestorNode != null)
    {
        <li><a href="@aboutInvestorNode.Url" title="@aboutInvestorNode.Name">@aboutInvestorNode.Name</a></li>
        foreach (var item in aboutInvestorNode.ChildrenAsList)
        {
            <li><a href="@item.Url" title="@item.Name">@item.Name</a></li>
        }
    }
}

@helper OurInvestmentsPage()
{
    var aboutInvestorNode = Model.StartPage.OurInvestmentsNode;
    
    if (aboutInvestorNode != null)
    {
        <li><a href="@aboutInvestorNode.Url" title="@aboutInvestorNode.Name">@aboutInvestorNode.Name</a></li>
        foreach (var item in aboutInvestorNode.ChildrenAsList)
        {
            <li><a href="@item.Url" title="@item.Name">@item.Name</a></li>
        }
    }
}

@helper InvestorsAndMediaPage()
{
    var investorsAndMediaNode = Model.StartPage.InvestorsAndMediaNode;

    if (investorsAndMediaNode != null)
    {
        <li><a href="@investorsAndMediaNode.Url" title="@investorsAndMediaNode.Name">@investorsAndMediaNode.Name</a></li>
        foreach (var item in investorsAndMediaNode.ChildrenAsList)
        {
            <li><a href="@item.Url" title="@item.Name">@item.Name</a></li>
        }
    }
}

<footer>
    <div class="introduction">
        <div class="container">
            @if (Model.StartPage.AdditionalMenu != null)
            {
                <ul class="main-actions">
                @foreach (var menu in Model.StartPage.AdditionalMenu)
                {
                    <li><a href="@menu.Link">@menu.Caption</a></li>
                }
                </ul>
            }
        </div>
    </div>
    <div class="introduction sitemap">
        <div class="container">
            <div class="columns">
                <div class="col-md-3 col-sm-4 footer-list">
                    <ul>
                        @AboutInvestorPage()
                    </ul>
                </div>
                <div class="col-md-3 col-sm-4 footer-list">
                    <ul>
                        @OurInvestmentsPage()
                    </ul>
                </div>
                <div class="col-md-3 col-sm-4 footer-list">
                    <ul>
                        @InvestorsAndMediaPage()
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="copyright">
            @Model.StartPage.Footer            
        </div>
    </div>
</footer>