@using Investor.Helpers
@using Investor.Models.PageModels

@inherits UmbracoViewPage<ListInvestmentsPageModel>

@{    
    Layout = "Master.cshtml";
}

<div class="row">
    <div class="col-md-9 list-investments-page">
        @Html.Render(Model.CurrentPage.Name, @<h1 class="@Model.ColorDropdown">@Model.Header</h1>)
        @Html.Render(Model.Preamble, @<p>@Model.Preamble</p>)

        <ul>
            @foreach (var investment in Model.Children())
            {
                <li><a href="@investment.Url">@investment.Name</a></li>
            }
        </ul>
    </div>
</div>