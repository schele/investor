@using Investor.Models.PageModels

@inherits UmbracoViewPage<BaseModel>

<nav class="main-navigation" role="navigation">
    <a class="logo" href="#"><img src="~/images/logo.png" alt="investor logo"/></a>
    <ul>
        @foreach (var categoryPage in Model.CurrentPage.ChildrenAsList.Where(x => x.NodeTypeAlias == "CategoryPageModel"))
        {
            <li><a href="@categoryPage.NiceUrl" title="@categoryPage.Name"><span class="icon"></span>@categoryPage.Name</a></li>
        }
    </ul>
</nav>

<div class="mobile-navigation-section">
    <nav class="mobile-navigation" data-mobile="true">
        <ul>
            <li id="mobile-main-menu" class="menu">
                <a class="ui">
                    <span class="icon"></span>
                </a>
                <ul class="options">
                    @foreach (var categoryPage in Model.CurrentPage.ChildrenAsList.Where(x => x.NodeTypeAlias == "CategoryPageModel"))
                    {
                        <li><a href="@categoryPage.NiceUrl" title="@categoryPage.Name"><span>@categoryPage.Name</span></a></li>
                    }
                </ul>
            </li>
        </ul>
    </nav>

    <div class="mobile-navigation" data-mobile="true">
        <div id="search">
            <a class="ui">
                <span class="icon"></span>
            </a>
            <div class="options">
                <umbraco:Macro Alias="QuickSearch" TextBoxId="TopMobileSearch" runat="server" />
            </div>
        </div>
    </div>
</div>